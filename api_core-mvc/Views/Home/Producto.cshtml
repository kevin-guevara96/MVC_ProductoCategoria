
@model Producto
@{
    ViewData["Title"] = "Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        @ViewBag.Accion
    </div>
    <div class="card-body">
        <form asp-action="GuardarCambios" asp-controller="Home" method="post">
            <input asp-for="IdProducto" type="hidden" />

            <div class="mb-2">
                <label class="form-label" asp-for="CodigoBarra"></label>
                <input class="form-control" type="type" asp-for="CodigoBarra" />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="Descripcion"></label>
                <input class="form-control" type="type" asp-for="Descripcion" />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="Marca"></label>
                <input class="form-control" type="type" asp-for="Marca" />
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="Categoria"></label>
                <select class="form-control" type="type" asp-for="IdCategoria">
                    <option value="0" disabled selected>Seleccionar</option>
                    <option value="1">Tecnologia</option>
                    <option value="2">Electrodomesticos</option>
                </select>
            </div>
            <div class="mb-2">
                <label class="form-label" asp-for="Precio"></label>
                <input class="form-control" type="type" asp-for="Precio" />
            </div>

            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        </form>

        <a asp-action="Index" asp-controller="Home" class="btn btn-link btn-sm">Regresar</a>
    </div>
</div>
